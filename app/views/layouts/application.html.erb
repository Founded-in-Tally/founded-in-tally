    <script type="text/javascript">
      $("body").on("click", "#join_list", function(e){
        e.preventDefault();
        var $this = $(this);
        if ($this.hasClass("closed")){
          $("#form_container").css("height", "336px");
          $this.removeClass("closed");
          $this.addClass("open");
        }else if ($this.hasClass("open")){
          $("#form_container").css("height", "0px");
          $this.removeClass("open");
          $this.addClass("closed");
        }else {
          $("#form_container").css("height", "336px");
          $this.addClass("open");
        };
      });
      $("body").on("click", "#register_ea", function(e){
        e.preventDefault();
        var $this = $(this);
        if ($this.hasClass("closed")){
          $("#ea_form_container").css("height", "336px");
          $this.removeClass("closed");
          $this.addClass("open");
        }else if ($this.hasClass("open")){
          $("#ea_form_container").css("height", "0px");
          $this.removeClass("open");
          $this.addClass("closed");
        }else {
          $("#ea_form_container").css("height", "336px");
          $this.addClass("open");
        };
      });

    </script>

    <!-- Min form -->
    <script src="/static/js/classie.js"></script>
    <script src="/static/js/stepsForm.js"></script>

    <script>
      var theForm = document.getElementById( 'join_form' );
                      //disable form autocomplete
                      theForm.setAttribute( "autocomplete", "off" );

      new stepsForm( theForm, {
        onSubmit : function( form ) {
          // hide form
          classie.addClass( theForm.querySelector( '.simform-inner' ), 'hide' );

          var data = {
            "q1": $("#q1").val(),
            "q2": $("#q2").val(),
            "q3": $("#q3").val(),
            "q4": $("#q4").val(),
            "q5": $("#q5").val(),
            "q6": $("#q6").val(),
            "q7": $("#q7").val(),
          }

          function success(data){
                // let's just simulate something...
            var messageEl = theForm.querySelector( '.final-message' );
            messageEl.innerHTML = 'Thank you for joining the initiative';
            classie.addClass( messageEl, 'show' );
            $("#q1").val("");
            $("#q2").val("");
            $("#q3").val("");
            $("#q4").val("");
            $("#q5").val("");
            $("#q6").val("");
            $("#q7").val("");
            };

          $.ajax({
                type: "post",
                data: data,
                url: '/add_startup',
                success: success
            }).fail(function(e){
                alert("error - add startup");
            });

        }
      } );

      var eaForm = document.getElementById( 'ea_form' );
                      //disable form autocomplete
                      eaForm.setAttribute( "autocomplete", "off" );

      new stepsForm( eaForm, {
        onSubmit : function( form ) {
          // hide form
          classie.addClass( eaForm.querySelector( '.simform-inner' ), 'hide' );

          var data = {
            "ea": $("#ea").val(),
          }

          function success(data){
                // let's just simulate something...
            var messageEl = eaForm.querySelector( '.final-message' );
            messageEl.innerHTML = 'Thank you for being a pioneer.';
            classie.addClass( messageEl, 'show' );
            };

          $.ajax({
                type: "post",
                data: data,
                url: '/add_ea',
                success: success
            }).fail(function(e){
                alert("error - add early adopter");
            });

        }
      } );
    </script>

    <!-- Smooth Scroll -->
    <script>
    $(function() {
      $('a[href*=#]:not([href=#])').click(function() {
      if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
        var target = $(this.hash);
        target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
        if (target.length) {
        $('html,body').animate({
          scrollTop: target.offset().top
        }, 1000);
        return false;
        }
      }
      });
    });
    </script>

